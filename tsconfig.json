{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./package/lib",
        "target": "ES2015",
        "lib": ["ES2015", "ES2016"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true
    },

    "include": ["./src/**/*.ts"],
    "exclude": []
}
