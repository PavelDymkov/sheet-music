{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "package",
        "target": "ES2015",
        "lib": ["ES2015", "ES2016", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "strict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true
    },

    "include": ["./src/**/*.ts"],
    "exclude": ["./src/package"]
}
